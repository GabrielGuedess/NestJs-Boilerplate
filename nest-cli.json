{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "entryFile": "infrastructure/main",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "../i18n/locales/**/*",
        "outDir": "dist/i18n",
        "watchAssets": true
      },
      {
        "include": "../prisma/generated/**/*",
        "outDir": "dist/prisma",
        "watchAssets": true
      }
    ]
  }
}
